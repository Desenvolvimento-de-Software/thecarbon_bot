{
    "compilerOptions": {

        /* Language and Environment */
        "target": "es6",

        /* Modules */
        "module": "ESNEXT",
        "rootDir": "./src",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": false
    }
}
